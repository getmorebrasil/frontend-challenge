{
    "extends": ["tslint:latest", "tslint-react"],
    "rules": {
      "jsx-wrap-multiline": false,
      "jsx-alignment": true,
      "jsx-self-close": true,
      "semicolon": [true, "never"],
      "max-line-length": {
            "options": [120]
        },
        
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "indent": [
            true,
            "spaces"
        ],
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    },
    "defaultSeverity": "warning"   
  }
  